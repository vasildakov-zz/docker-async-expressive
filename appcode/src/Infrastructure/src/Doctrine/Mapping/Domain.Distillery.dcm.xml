<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Domain\Distillery" table="distillery">

        <!-- definition here -->
        <indexes>
            <index name="name_idx" columns="name" />
            <index columns="name" />
        </indexes>

        <id name="id" type="string">
            <generator strategy="UUID" />
        </id>

        <field name="name" column="name" type="string" nullable="false" />
        <field name="description" column="description" type="string" nullable="true" />
        <field name="founded" column="founded" type="integer" nullable="true" />

        <field name="location" column="location" type="string" nullable="true" />
        <field name="status" column="status" type="string" nullable="true" />

        <!--embedded name="email" column="email" class="Domain\Type\Email" use-column-prefix="false" /-->
    </entity>

</doctrine-mapping>
